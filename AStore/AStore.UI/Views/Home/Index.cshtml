@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<AStore.Library.Models.Section>

<div class="text-center p-5">
    <h1 class="display-4" style="margin-bottom: 5rem">Store Information</h1>

    <div class="d-flex justify-content-center align-items-center">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Section</th>
                    <th scope="col">Customers</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model.ElementAt(i).SectionName</td>
                        <td>@Model.ElementAt(i).CustomerCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
